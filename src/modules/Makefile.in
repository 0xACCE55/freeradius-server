@INCLUDE@ @IQUOTE@../../Make.inc@IQUOTE@

WHAT_TO_MAKE	= all

all:
	@$(MAKE) $(MFLAGS) WHAT_TO_MAKE=$@ common

clean:
	@$(MAKE) $(MFLAGS) WHAT_TO_MAKE=$@ common
	@rm -f *~ lib/*

install:
	@$(MAKE) $(MFLAGS) WHAT_TO_MAKE=$@ common

common:
	@for mod in rlm_*; do \
		what=$(WHAT_TO_MAKE); \
		[ "$$what" = "all" ] && what="static dynamic"; \
		echo "Making $$what in $$mod..."; \
		(cd $$mod ; $(MAKE) $(MFLAGS) $$what) || exit 1;\
	done
