#
#  PRE: update
#
update reply {
       &Tmp-String-0 := "foo"

       #
       #  This is a string, so it's NOT allowed.
       #
       &Tmp-String-1 := {		# ERROR
       		 Tmp-String-2 := "1.0"
       }
}

update reply {
       &Tmp-String-0 := "foo"

       #
       #  Reference prefix not allowed for sub attributes
       #
       &Tmp-Group-0 := {
       		 &Tmp-String-2 := "1.0" # ERROR
       }
}

success
