#
#  PRE: if
#
call second {
	&reply += {
		&Reply-Message = 'call second post'
	}
}

if (!&reply.Reply-Message) {
	test_fail
}

if (&reply.Reply-Message[0] != "call second") {
	test_fail
}

if (&reply.Reply-Message[1] != "call second post") {
	test_fail
}

#
#  @todo - The LHS SHOULD set the default context for the RHS.
#
&reply -= &reply.Reply-Message

success
