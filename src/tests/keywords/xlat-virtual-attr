#
#  PRE: if
#

if (!("%{Packet-Type}" == 'Access-Request')) {
	test_fail
}

if (!("%{Packet-Src-IP-Address}" == 127.0.0.1)) {
	test_fail
}

if (!("%{Packet-Dst-IP-Address}" == 127.0.0.1)) {
	test_fail
}

# Can't have both...
if (%{Packet-Src-IPv6-Address}) {
	test_fail
}

if (%{Packet-Dst-IPv6-Address}) {
	test_fail
}

if (!("%{Packet-Src-Port}" == '18120')) {
	test_fail
}

if (!("%{Packet-Dst-Port}" == '1812')) {
	test_fail
}

success
