update request {
	&Tmp-String-1 := 'baz'
	&Tmp-String-1 += 'boink'
}

#
#  String (Intersection)
#
update request {
	&Tmp-String-0 == &Tmp-String-1
}

if (&Tmp-String-0[0] != &Tmp-String-1) {
	update reply {
		Filter-Id += "fail 27"
	}
}

if ("%{Tmp-String-0[#]}" != 1) {
	update reply {
		Filter-Id += "fail 28"
	}
}

