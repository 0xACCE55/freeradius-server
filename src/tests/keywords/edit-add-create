#
#  Add to something which doesn't exist
#
string test_string
uint32 test_integer1
uint32 test_integer2
uint32 test_integer3

&test_integer1 += 4
if !(&test_integer1 == 4) {
	test_fail
}


&test_string += "bar"
if !(&test_string == "bar") {
	test_fail
}

&Tmp-Group-0 += {
	&Filter-Id = "foo"
}

if !&Tmp-Group-0 {
	test_fail
}

if !(&Tmp-Group-0.Filter-Id == "foo") {
	test_fail
}

&test_integer2 := 3
&test_integer3 := 4

&test_integer1 += &test_integer3 - &test_integer2
if !(&test_integer1 == 5) {
	test_fail
}

success
