#! /bin/sh

set -e

case "$1" in
  remove)
	;;
  upgrade)
	;;
  failed-upgrade)
	;;
  deconfigure)
	;;
esac

if [ "$1" = "upgrade" -o  "$1" = "remove" ]
then
	if [ -L /usr/doc/radiusd-freeradius ]
	then
		rm -f /usr/doc/radiusd-freeradius
	fi
	/etc/init.d/freeradius stop
	rm -rf /var/run/radiusd
fi

exit 0
